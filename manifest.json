{
  "manifest_version": 3,
  "name": "Shopee Upload Date Finder",
  "version": "1.0",
  "description": "Tampilkan tanggal upload produk Shopee langsung di halaman produk.",
  "permissions": ["scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://shopee.co.id/*"],
      "js": ["content.js"]
    }
  ]
}